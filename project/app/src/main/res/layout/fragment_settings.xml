<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fragment_settings"
        android:tag="fragment_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="@string/settings_color_title"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_color_red"/>
        <SeekBar
            android:id="@+id/settings_seekBarRed"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="25dp"
            android:max="255"
            android:progress="255"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_color_green"/>
        <SeekBar
            android:id="@+id/settings_seekBarGreen"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="25dp"
            android:max="255"
            android:progress="255"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_color_blue"/>
        <SeekBar
            android:id="@+id/settings_seekBarBlue"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:max="255"
            android:progress="255"/>
    </LinearLayout>
</ScrollView>